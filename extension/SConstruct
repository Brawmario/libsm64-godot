#!/usr/bin/env python
import os
import sys

env = SConscript("godot-cpp/SConstruct")

# For the reference:
# - CCFLAGS are compilation flags shared between C and C++
# - CFLAGS are for C-specific compilation flags
# - CXXFLAGS are for C++-specific compilation flags
# - CPPFLAGS are for pre-processor flags
# - CPPDEFINES are for pre-processor defines
# - LINKFLAGS are for linking flags

# tweak this if you want to use different folders, or more folders, to store your source code in.
env.Append(CPPPATH=["src/"])
sources = (Glob("src/*.cpp"))

# libsm64 settings (run make on the libsm64 folder before attempting compilation)
env.Append(CPPPATH=["./"])
env.Append(CPPPATH=["libsm64/dist/include/"])
env.Append(LIBPATH=["libsm64/dist/"])
env.Append(LIBS=["libsm64"])

# remove --static flag from LINKFLAGS if present
env["LINKFLAGS"] = [x for x in env["LINKFLAGS"] if "--static" not in x]

if env["platform"] == "macos":
    library = env.SharedLibrary(
        "../addons/libsm64-godot/extension/bin/libsm64gd.{}.{}.framework/libsm64gd.{}.{}".format(
            env["platform"], env["target"], env["platform"], env["target"]
        ),
        source=sources,
    )
else:
    library = env.SharedLibrary(
        "../addons/libsm64-godot/extension/bin/libsm64gd.{}.{}.{}{}".format(
            env["platform"], env["target"], env["arch_suffix"], env["SHLIBSUFFIX"]
        ),
        source=sources,
    )

Default(library)