    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-godot-cpp",
            "type": "shell",
            "command": "scons target=debug arch=x86_64 generate_bindings=yes",
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "extension/godot-cpp"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "initial-build-extension",
            "type": "shell",
            "command": "scons target=debug arch=x86_64",
            "dependsOrder": "sequence",
            "dependsOn":["build-godot-cpp"],
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "extension"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-extension",
            "type": "shell",
            "command": "scons target=debug arch=x86_64",
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "extension"
            },
            "problemMatcher": "$msCompile"
        }
    ]
